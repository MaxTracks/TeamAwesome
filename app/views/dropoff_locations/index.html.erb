<h1>Listing dropoff_locations</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Details</th>
      <th>Items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dropoff_locations.each do |dropoff_location| %>
      <tr>
        <td><%= dropoff_location.location %></td>
        <td><%= dropoff_location.latitude %></td>
        <td><%= dropoff_location.longitude %></td>
        <td><%= dropoff_location.details %></td>
        <td><%= dropoff_location.items %></td>
        <td><%= link_to 'Show', dropoff_location %></td>
        <td><%= link_to 'Edit', edit_dropoff_location_path(dropoff_location) %></td>
        <td><%= link_to 'Destroy', dropoff_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

